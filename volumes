Emptydir

vim deployment.yml

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mydeploy
spec:
  replicas: 2
  selector:
    matchLabels:
      app: swiggy
  template:
    metadata:
      labels:
        app: swiggy
    spec:
      containers:
        - name: cont-1
          image: ubuntu
          command: ["/bin/bash", "-c", "while true; do echo welcome to devops; sleep 5; done"]
          volumeMounts:
            - name: aws
              mountPath: "/tmp/docker"


        - name: cont-2
          image: ubuntu
          command: ["/bin/bash/", "-c", "while true; do echo welcome to devops; sleep; done"]
          volumeMounts:
            - name: aws
              mountPath: "/etc/jenkins"



      volumes:
        - name: aws
          emptyDir: {}
